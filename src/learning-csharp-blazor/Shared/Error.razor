@using Microsoft.Extensions.Logging
@inject ILogger<Error> logger;

<CascadingValue Value="@this">
  @ChildContent
</CascadingValue>

@code {

  [Parameter]
  public RenderFragment? ChildContent { get; set; }

  public void ProcessError(Exception e)
  {
    logger.LogError($"{e.GetType()}, {e.Message}");
  }

}
